<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".MainActivity">

  <ScrollView
      android:id="@+id/fileScrollView"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_90sdp"
      android:layout_marginLeft="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_40sdp"
      android:background="@drawable/cleanerrectangle"
      android:paddingLeft="@dimen/_5sdp"
      android:paddingTop="@dimen/_5sdp"
      android:paddingRight="@dimen/_5sdp"
      android:paddingBottom="@dimen/_5sdp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView22"
      app:layout_constraintVertical_bias="0.118"


      >


    <LinearLayout
        android:id="@+id/fileListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        />
  </ScrollView>

  <ImageView
      android:id="@+id/imageView18"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_270sdp"
      android:scaleType="fitXY"
      android:src="@drawable/cleanerpath"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView17"
      android:layout_width="@dimen/_40sdp"
      android:layout_height="@dimen/_40sdp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView18"
      app:layout_constraintEnd_toEndOf="@+id/imageView18"
      app:layout_constraintHorizontal_bias="0.138"
      app:layout_constraintStart_toStartOf="@id/imageView18"
      app:layout_constraintTop_toTopOf="@+id/imageView18"
      app:layout_constraintVertical_bias="0.899"
      app:srcCompat="@drawable/cleanerf" />


  <ImageView
      android:id="@+id/imageView23"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/imageView18"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView18"
      app:srcCompat="@drawable/circle" />


  <TextView
      android:id="@+id/ScanTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0%"
      android:textColor="@color/background_blue"
      android:textSize="@dimen/_40sdp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView23"
      app:layout_constraintHorizontal_bias="0.51"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView23" />


  <TextView
      android:id="@+id/statusTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed-medium"
      android:text=" "
      android:textColor="@color/background_blue"
      android:textSize="25sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.034" />

  <ProgressBar
      android:id="@+id/scanProgress"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="@dimen/_150sdp"
      android:layout_height="@dimen/_150sdp"
      android:background="@drawable/circular_background"
      android:indeterminate="false"
      android:max="1"
      android:progress="0"
      android:progressDrawable="@drawable/circular"
      app:layout_constraintBottom_toBottomOf="@+id/ScanTextView"
      app:layout_constraintEnd_toEndOf="@+id/ScanTextView"
      app:layout_constraintStart_toStartOf="@+id/ScanTextView"
      app:layout_constraintTop_toTopOf="@+id/ScanTextView" />

  <ImageView
      android:id="@+id/imageView19"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginLeft="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_40sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView18"

      />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/_4sdp"
      android:textColor="@color/textcolor"
      android:textSize="@dimen/_15sdp"
      app:layout_constraintBottom_toTopOf="@+id/imageView21"
      app:layout_constraintEnd_toEndOf="@+id/imageView20"
      app:layout_constraintHorizontal_bias="0.056"
      app:layout_constraintStart_toStartOf="@+id/imageView20"
      app:layout_constraintTop_toBottomOf="@+id/imageView19"
      app:layout_constraintVertical_bias="0.558" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/_4sdp"
      android:textColor="@color/textcolor"
      android:textSize="@dimen/_15sdp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView21"
      app:layout_constraintEnd_toEndOf="@+id/imageView21"
      app:layout_constraintHorizontal_bias="0.05"
      app:layout_constraintStart_toStartOf="@+id/imageView21"
      app:layout_constraintTop_toTopOf="@+id/imageView21"
      app:layout_constraintVertical_bias="0.589" />

  <ImageView
      android:id="@+id/completed"
      android:layout_width="@dimen/_15sdp"
      android:layout_height="@dimen/_15sdp"
      android:layout_marginBottom="22dp"
      app:layout_constraintBottom_toBottomOf="@id/imageView19"
      app:layout_constraintHorizontal_bias="0.897"
      app:layout_constraintLeft_toRightOf="@id/textView5"
      app:layout_constraintRight_toRightOf="@+id/imageView19" />

  <ImageView
      android:id="@+id/imageView22"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginLeft="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_40sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView21" />

  <ImageView
      android:id="@+id/completed2"
      android:layout_width="@dimen/_15sdp"
      android:layout_height="@dimen/_15sdp"
      android:layout_marginRight="20dp"
      android:layout_marginBottom="22dp"

      app:layout_constraintBottom_toBottomOf="@id/imageView21"
      app:layout_constraintRight_toRightOf="@+id/imageView21" />

  <ImageView
      android:id="@+id/imageView20"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginLeft="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_40sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.413"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView19" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/_6sdp"
      android:textColor="@color/textcolor"
      android:textSize="@dimen/_15sdp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView22"
      app:layout_constraintEnd_toEndOf="@+id/imageView22"
      app:layout_constraintHorizontal_bias="0.054"
      app:layout_constraintStart_toStartOf="@+id/imageView22"
      app:layout_constraintTop_toBottomOf="@+id/imageView21"
      app:layout_constraintVertical_bias="0.593" />

  <ImageView
      android:id="@+id/completed1"
      android:layout_width="@dimen/_15sdp"
      android:layout_height="@dimen/_15sdp"
      android:layout_marginBottom="22dp"
      app:layout_constraintBottom_toBottomOf="@id/imageView20"
      app:layout_constraintHorizontal_bias="0.889"
      app:layout_constraintLeft_toRightOf="@id/textView6"
      app:layout_constraintRight_toRightOf="@+id/imageView20" />

  <ImageView
      android:id="@+id/completed3"
      android:layout_width="@dimen/_15sdp"
      android:layout_height="@dimen/_15sdp"
      android:layout_marginBottom="@dimen/_18sdp"
      app:layout_constraintBottom_toBottomOf="@id/imageView22"
      app:layout_constraintHorizontal_bias="0.891"
      app:layout_constraintLeft_toRightOf="@id/textView8"
      app:layout_constraintRight_toRightOf="@+id/imageView22" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/_4sdp"
      android:textColor="@color/textcolor"
      android:textSize="@dimen/_15sdp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView19"
      app:layout_constraintEnd_toEndOf="@+id/imageView19"
      app:layout_constraintHorizontal_bias="0.065"
      app:layout_constraintStart_toStartOf="@+id/imageView19"
      app:layout_constraintTop_toTopOf="@+id/imageView19"
      app:layout_constraintVertical_bias="0.538" />

  <ImageView
      android:id="@+id/imageView21"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginLeft="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_40sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView20"

      />

</androidx.constraintlayout.widget.ConstraintLayout>